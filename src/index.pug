extends pug/template
include pug/mixins
include pug/left_side_file_upload

block body
    body
        .container
            .left_side
                +close_btn()
                .left_top
                    h1 Авто Ру
                .left_middle
                    .main_controls
                          ul.tabs
                              li.tabs__item(data-tab= '.auto') Мотоциклы
                              li.tabs__item(class='active' data-tab= '.moto') Автомобили
                    .controls_content
                        .controls_content_auto(class="auto")
                            form.auto
                        .controls_content_moto(class="moto")
                             form.moto
                                     select(class='auto_brand_select')
                                        option(value='1')
                                        option(value='2') BMW
                                        option(value='3') Mercedes
                                     select(class='auto_model_select')
                                         option(value='1')
                                         option(value='2') 5 Series
                                         option(value='3') 7 Series
                                         option(value='4') E class
                                         option(value='5') S class
                                     select(class='auto_year_select')
                                         option(value='1')
                                         option(value='2') 2020
                                         option(value='3') 2021
                                         option(value='4') 2022
                                     select(class='auto_price_select')
                                         option(value='1')
                                         option(value='2') 50000
                                         option(value='3') 60000
                                         option(value='4') 70000
                                         option(value='5') 80000
                                     .autoNewOrUsed
                                        label(for='new') С салона
                                            input(type='radio' class='radio_new' id='new' name='newOrUsed' value='new')
                                        label(for='used') Б/У
                                            input(type='radio' class='radio_used' id='used' name='newOrUsed' value='used')
                                     .auto_submit
                                         input(type='submit' value='Поиск' class='auto_submit__find')
                .left_bottom
                    +fileUpload()
            .right_side


